package training;

 class Area
{
    public static void main(String[] args) {

        Shapes type[]=new Shapes[3];
        type[0]= new Rectangle(10, 4);
        type[1] = new Square(7);
        type[2] = new Circle(3.5);

        System.out.println("Rectangle Area : " + type[0].getArea());
        System.out.println("Square Area : " + type[1].getArea());
        System.out.println("Circle Area : " + type[2].getArea());
        System.out.println();
    }
}
abstract class Shapes
{
    double l,b,s,r,a=22.0/7.0;
    abstract double getArea();

}

class Rectangle extends Shapes
{

    Rectangle(double l, double b)
    {
        this.l = l;
        this.b = b;
    }

    @Override
    double getArea()
    {
        return l * b;
    }
}

class Square  extends Shapes
{

    Square(double s)
    {
        this.s = s;
    }

    @Override
    double getArea()
    {
        return s * s;
    }
}

class Circle extends Shapes
{


    Circle(double r)
    {
        this.r = r;
    }

    @Override
    double getArea()
    {
        return (a) * r * r;
    }
}
